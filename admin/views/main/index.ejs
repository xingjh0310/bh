<!DOCTYPE HTML>
<html>
<% include ../main/top.ejs %>
<body>
<header class="Hui-header cl"><a class="Hui-logo l" title="H-ui.admin v2.3" href="/"><%= com.env.platform.platformName %>
        后台管理系统</a> <a class="Hui-logo-m l" href="/" title="H-ui.admin"></a> <span class="Hui-subtitle l"></span>
    <ul class="Hui-userbar">
        <li><%= user.roleName || '' %></li>
        <li class="dropDown dropDown_hover"><a href="#" class="dropDown_A"><%= user.name %> <i class="Hui-iconfont">
                    &#xe6d5;</i></a>
            <ul class="dropDown-menu radius box-shadow">
                <li><a href="/logout/<%=com.env.site_path%>">退出</a></li>
            </ul>
        </li>

    </ul>
    <a aria-hidden="false" class="Hui-nav-toggle" href="#"></a></header>
<aside class="Hui-aside">
    <input runat="server" id="divScrollValue" type="hidden" value=""/>
    <div class="menu_dropdown bk_2">
        <% for(var i = 0;i < rights.length;i++){ %>
        <% if(rights[i].check){ %>

        <dl id="menu-article">
            <dt><i class="Hui-iconfont">&#xe636;</i> <%- rights[i].name %> <i class="Hui-iconfont menu_dropdown-arrow"></i></dt>
            <dd>
                <ul>
                    <% for(var j = 0;j < rights[i].childList.length;j++){ %>
                    <% if(rights[i].childList[j].check){ %>
                    <li><a _href="<%= rights[i].childList[j].url + '?t=' + new Date().getTime() %>"
                           href="javascript:void(0)"><%- rights[i].childList[j].name %></a></li>
                    <% }} %>
                </ul>
            </dd>
        </dl>
        <% } %>
        <% } %>
    </div>
</aside>
<div class="dislpayArrow"><a class="pngfix" href="javascript:void(0);" onClick="displaynavbar(this)"></a></div>
<section class="Hui-article-box">
    <div id="Hui-tabNav" class="Hui-tabNav">
        <div class="Hui-tabNav-wp">
            <ul id="min_title_list" class="acrossTab cl">
                <li class="active"><span title="我的桌面" data-href="/main/welcome">我的桌面</span><em></em></li>
            </ul>
        </div>
        <div class="Hui-tabNav-more btn-group"><a id="js-tabNav-prev" class="btn radius btn-default size-S"
                                                  href="javascript:;"><i class="Hui-iconfont">&#xe6d4;</i></a><a
                    id="js-tabNav-next" class="btn radius btn-default size-S" href="javascript:;"><i
                        class="Hui-iconfont">&#xe6d7;</i></a></div>
    </div>
    <div id="iframe_box" class="Hui-article">
        <div class="show_iframe">
            <div style="display:none" class="loading"></div>
            <iframe scrolling="yes" frameborder="0" src="/main/welcome"></iframe>
        </div>
    </div>
</section>

</body>
<% include ../main/bottom.ejs %>
</html>