<!DOCTYPE HTML>
<html>
<% include ../main/top.ejs %>
<body>
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 内容管理 <span
            class="c-gray en">&gt;</span> 广告管理 <a class="btn btn-success radius r mr-20"
                                                  style="line-height:1.6em;margin-top:3px"
                                                  href="javascript:location.replace(location.href);" title="刷新"><i
                class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="pd-20">
    <div class="">
        <button name="" id="" class="btn btn-success" type="button" onclick="edit(null)"><i class="Hui-iconfont">
                &#xe600;</i> 新增
        </button>
    </div>
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort">
            <thead>
            <tr class="text-c">
                <th width="25"><input type="checkbox" name="" value=""></th>
                <th width="120">添加时间</th>
                <th width="150">名称</th>
                <th width="420">地址</th>
                <th width="80">图片</th>
                <th width="80">展示</th>
                <th width="40">排序</th>
                <th width="75">状态</th>
                <th width="75"> 是否推荐</th>
                <th width="75">操作</th>
            </tr>
            </thead>
            <script type="text/template" id="ads_tmpl">
                <tr class="text-c">
                    <td><input type="checkbox" value="" name=""></td>
                    <td>{time}</td>
                    <td>{name}</td>
                    <td>{url}</td>
                    <td>{img}</td>
                    <td>{showType}</td>
                    <td>{order}</td>
                    <td>{state}</td>
                    <td>{isRecommend}</td>
                    <td>{handle}</td>
                </tr>
            </script>
            <tbody id="ads_list">

            </tbody>
        </table>
        <div id="page"></div>
    </div>
</div>


</body>
<% include ../main/bottom.ejs %>
<script type="text/javascript">
    load();
    function load() {
        ZC_api.loadAdsList(1, 20);
    }

    function edit(id) {
        var index = layer.open({
            type: 2,
            title: '编辑广告',
            content: '/content/adsEdit' + (id ? '?id=' + id : '')
        });
        layer.full(index);
    }

</script>
</html>