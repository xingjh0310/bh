<!DOCTYPE HTML>
<html>
<% include ../main/top.ejs %>
<body>
<div class="pd-20">
    <div class="">
        <input type="text" id="param" placeholder="手机号码，姓名" style="width:350px" class="input-text">
        <button name="" id="" class="btn btn-success" type="button" onclick="ZC_api.loadInvestorList(1,10,false)"><i
                    class="Hui-iconfont">
                &#xe665;</i> 搜索
        </button>
        <button id="confirm" onClick="selectUser();" class="btn btn-primary radius" type="button"><i
                    class="Hui-iconfont">&#xe632;</i> 确认
        </button>
    </div>
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort">
            <thead>
            <tr class="text-c">
                <th width="25"><input type="checkbox" name="" value=""></th>
                <th width="40">手机号</th>
                <th width="60">真实姓名</th>
                <th width="80">身份证号</th>
            </tr>
            </thead>
            <script type="text/template" id="investor_tmpl">
                <tr class="text-c">
                    <td><input type="checkbox" class="checkbox" value="{mobile}" name="checkbox">

                    </td>
                    <td>{mobile}</td>
                    <td>{real_name}</td>
                    <td>{id_card}</td>
                </tr>
            </script>
            <tbody id="investor_list">

            </tbody>
        </table>
        <div id="page"></div>
    </div>
    <input type="hidden" value="<%= mobiles%>" id="ms"/>
</div>
<% include ../main/bottom.ejs %>
<script type="text/javascript">
    load();
    function load() {
        ZC_api.loadInvestorList(1, 10,false);
    }

    function selectUser(id) {
        var mobiles = new Array();
        var m = $("#mobiles",window.parent.document).val();
        var sp = "";
        $($("input[name='checkbox']:checked").each(function(){
            if($(this).val() != m){
                mobiles.push($(this).val());
                if(m){
                    sp = ",";
                }
            }
        }));
        $("#mobiles",window.parent.document).val(m+sp+mobiles);
        layer_close();
    }
</script>

</body>

</html>