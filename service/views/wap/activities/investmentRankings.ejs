<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <title>投资排行榜</title>
    <link rel="stylesheet" href="/css/base/BH_base.css">
    <style>
        html,body{
            margin:0 auto;
            width:100%;
            max-width:768px;
            height:auto;
            background-color: #2b1d6c !important;
            background: url("/img/activities/rankingList/background.png") no-repeat;
            background-size: 100% 10.43rem;
        }
        .container{
            width:100%;
            height:auto;
            overflow: hidden;
            padding-bottom: 0.4rem;
            box-sizing: border-box;
            padding-left:.2rem;
            padding-right: .2rem;
        }
        .rank_board{
            height: auto;
            background: #fff !important;
            margin:0 auto;
            margin-top:7.13rem;
            border-radius: .12rem;
            padding-bottom: 0.4rem;
            box-sizing: border-box;
        }
        .theFirstThree{
            width: 6.9rem;
            height:3rem;
            display: flex;
            display: -webkit-flex;
            display: -ms-flex;
            margin:0 auto;
            overflow: hidden;
        }
        .theFirstThree>div{
            width: 2.2rem;
            height:100%;
            display: inline-block;
            flex:1;
            -webkit-flex: 1;
            -ms-flex: 1;
            border-radius: 0.12rem;
        }
        .theFirstThree>.first{
            background: url("/img/activities/rankingList/No.1.png") no-repeat;
            background-size: 100%;
            background-position: center;
        }
        .theFirstThree>.second{
            background: url("/img/activities/rankingList/No.2.png") no-repeat;
            background-size: 100%;
            background-position: center;
            margin-left: 0.16rem;
        }
        .theFirstThree>.third{
            background: url("/img/activities/rankingList/No.3.png") no-repeat;
            background-size: 100%;
            background-position: center;
            margin-left: 0.16rem;
        }
        .ranking_title{
            width: 6.9rem;
            height:.6rem;
            background-color: #fff;
            border-radius: .12rem;
            overflow: hidden;
            margin:0 auto;
            display: flex;
            display: -webkit-flex;
            display: -ms-flex;
            margin-top: .3rem;
        }
        .ranking_title>div{
            text-align: center;
            color: #666;
            flex:1;
            -webkit-flex: 1;
            -ms-flex: 1;
            height: 100%;
            display: inline-block;
            line-height: .6rem;
        }
        .ranking_list>.list{
            width:6.9rem;
            height:auto;
            margin:0 auto;
        }
        .ranking_list>.list>ul{
            width: 100%;
            height:100%;
        }
        .ranking_list>.list>ul>li{
            width: 100%;
            height:.6rem;
            display: flex;
            display: -webkit-flex;
            display: -ms-flex;
            border-radius: .12rem;
        }
        .ranking_list>.list>ul>li div{
            height:100%;
            text-align: center;
            display: inline-block;
            flex:1;
            -webkit-flex: 1;
            -ms-flex: 1;
            line-height: .6rem;
            color: #c062fe;
        }
        .noMore{
            color: #bebad2;
            width: 100%;
            height:.4rem;
            line-height: .4rem;
            text-align: center;
            font-size: .26rem;
            margin-top: 0.4rem;
        }
        .first,.second,.third{
            text-align: center;
            color: #fff;
            font-size: .26rem;
            padding-top:2rem;
            box-sizing: border-box;
        }
        .first>div,.second>div,.third>div{
            height: .44rem;
            line-height: .44rem;
        }
        .first>div>span,.second>div>span,.third>div>span{
            font-size: .3rem;
        }
        .amount{
            font-size: .2rem;
            font-weight: bold;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="rank_board">
            <div class="theFirstThree">
                <div class="first">
                    <div class="mobile" id="firstMobile"></div>
                    <div class="amount"><span id="firstAmount"></span>元</div>
                </div>
                <div class="second">
                    <div class="mobile" id="secondMobile"></div>
                    <div class="amount"><span id="secondAmount"></span>元</div>
                </div>
                <div class="third">
                    <div class="mobile" id="thirdMobile"></div>
                    <div class="amount"><span id="thirdAmount"></span>元</div>
                </div>
            </div>
            <div class="ranking_list">
                <div class="ranking_title">
                    <div>排名</div>
                    <div>用户名</div>
                    <div>投资金额</div>
                </div>
                <div class="list">
                    <ul>
                       <!--列表-->
                    </ul>
                </div>
            </div>
        </div>
        <div class="noMore">暂无更多排行榜</div>
    </div>
</body>
<script src="/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
    var requestList = function () {
        $.post('/api/getSortInvest_20',function (res) {
            var firstThree = [];
            var total_20 = [];
            var list = [];
            for(var i = 0 ; i<3;i++){
                firstThree.push(res.totalInvest[i])
            }
            $('#firstMobile').text(firstThree[0].mobile);
            $('#secondMobile').text(firstThree[1].mobile)
            $('#thirdMobile').text(firstThree[2].mobile);
            $('#firstAmount').text(firstThree[0].amount);
            $('#secondAmount').text(firstThree[1].amount)
            $('#thirdAmount').text(firstThree[2].amount)
            list = res.totalInvest.slice(3)
            for(var j = 0;j < list.length;j++){
                total_20 += ' <li style="background-color:'+(j%2 ==0 ? '#f5eeff':'#fff')+' ">' +
                                '<div>'+(j+4)+'</div>' +
                                '<div>'+list[j].mobile+'</div>' +
                                '<div>'+list[j].amount+'</div>' +
                            '</li>'
            }
            $('.list>ul').html(total_20)
        })
    }
    requestList();
</script>
</html>