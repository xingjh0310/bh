<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>铂恒-投资有礼</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <link rel="stylesheet" type="text/css" href="/css/common.css">
    <link rel="stylesheet" href="/css/swiper.min.css">
</head>
<body >
<style>
    body{
        background:url("/img/gift_bg.png");
        padding-bottom: 1rem;
        height: auto;
    }
    img{
        width: 100%;
        display: block;
    }
    .top_list{
        width: 100%;
        height:1rem;
        background:#fff;
        position: fixed;
        top:0px;
        z-index: 2;
    }
    .top_list span{
        float: left;
        width: 33.3%;
        height: 0.9rem;
        text-align: center;
        line-height: 0.9rem;
        font-size: 0.32rem;
        color: #666;
        border-radius: inherit !important;
        margin: 0 !important;
        opacity:1 !important;
        background: none !important;
    }
    .top_list ul li{
        float: left;
        width: 33.3%;
        height:1rem;
        color: #666;
        font-size: 0.32rem;
        text-align: center;
        line-height: 1rem;
        border-bottom: 1px solid #e6e6e6;
    }
    .top_list .swiper-pagination-bullet-active{
        color: #fff;
        height: 0.95rem;
        border-bottom: 0.05rem solid #fe8c14;
    }
    .bottom_list{
       /* padding-bottom:1.3rem;*/
        width: 100%;
        padding-top: 1.5rem;
    }
    .btns{
        width: 50%;
        margin: auto;
        margin-top:0.5rem;
    }
    .fu{
        width: 100%;
        height:1.2rem;
        background:url("/img/gift_bg.png");
        position: fixed;
        bottom: 0;
        z-index: 2;
    }
    .fu a{
        display: block;
        width: 80%;
        margin: auto;
        height: 0.96rem;
        margin-top: 0.1rem;
    }
    .fu a img{
        width: 100%;
    }
</style>
<div class="bottom_list swiper-container">
    <div class="top_list">
        <ul>
            <li class="active">新客奖</li>
            <li>邀请奖</li>
            <li>满标奖</li>
        </ul>
    </div>
    <div class="top_list swiper-pagination" style="background: rgba(0,0,0,0)">
    </div>
    <ul class="swiper-wrapper">
        <li class="swiper-slide" style="height: 12rem">
            <img src="/img/gift_1.png" style="margin-bottom: 0.5rem"/>
        </li>
        <li class="swiper-slide">
            <div style="width: 100%">
                <img src="/img/gift_2.png"/>
                <img src="/img/gift_3.png"/>
            </div>

        </li>
        <li class="swiper-slide">
            <img src="/img/gift_4.png"/>
        </li>
    </ul>
</div>
<div class="fu">
    <a href="javascript:void(0);" id="goDebt"> <img src="/img/invite_btn.png"/></a>
</div>
<% include ../parent/slide_nav.ejs %>
<script>
    var swiper = new Swiper('.swiper-container', {
        pagination: '.swiper-pagination',
        paginationClickable: true,
        autoHeight:true
    });
    $(".top_list ul li").click(function(){
        $(this).siblings().removeClass("active");
        $(this).addClass("active");
        $(".bottom_list ul li").eq($(this).index()).siblings().hide();
        $(".bottom_list ul li").eq($(this).index()).show();
    })
    var ua = window.navigator.userAgent.toLowerCase();
    $("#goDebt").click(function(){
        if (ua.match(/android_hongchuang|ios_hongchuang/i)) {
            window.location.href = 'boheng://https://www.bohomm.com//boheng?action=debts';
        } else {
            window.location.href = 'https://www.bohomm.com/debts';
        }
    })
</script>
</body>
</html>
