/*help*/
.help_bn{width:100%;overflow: hidden;height:355px;background: url("/img/helpbg.jpg") center ;}
.help_main{width:1100px;margin:0 auto;}
.help_warp{background: #f5f5f5;padding-bottom:50px;}
.help_main .h1{font-size:24px;padding:45px 0;}
.help_ul{overflow: auto}
.help_ul li{width:218px;height:128px;;float:left;background: #fff;font-size:16px;text-align:center;border:1px solid #ebebeb}
.help_ul li span{font-size:30px;color:#999;margin:30px 0 20px 0;display:inline-block;}
.help_ul li:hover{color:#00b3fe;border-color:#00b3fe;background: #f7f7f7}
.help_ul li:hover span{color:#00b3fe}
.help_ul li:hover a{color:#00b3fe}
.fuwu_list{overflow:auto;border:1px solid #eee;}
.fuwu_list li{height:50px;text-align:center;width:182px;line-height: 50px;float:left;font-size:16px;background: #f6f6f6;border-right:1px solid #eee;color:#999;cursor: pointer}
.fuwu_list li.active{background: #fe8a0f;color:#fff}
.fuwu_main{height:428px;background: #fff;width: 1098px;}
.fuwu_main>div li{font-size:16px;color:#999;line-height: 1.2;cursor: pointer;    margin-top: 20px;}
.fuwu_main>div ul{margin:25px 0 0 16px;float:left;width:300px;}
.fuwutab{width:670px;height:350px;background: url("/img/hebg.png");float:right;margin:20px 30px 0 0;padding:20px 30px 0 40px;}
.fuwutab>div{display:none;}
.fuwutab p{line-height: 1.5;font-size: 16px;}
.fuwu_main .active{color:#fe8a0f}

.zhiyin_main .active{color:#fe8a0f}
.zhiyin_main>div{display: none;}
.zhiyin_list{overflow:auto;border:1px solid #eee;}
.zhiyin_list li.active{background: #fe8a0f;color:#fff}
.zhiyin_list li{height:50px;text-align:center;width:182px;line-height: 50px;float:left;font-size:16px;background: #f6f6f6;border-right:1px solid #eee;color:#999;cursor: pointer}
.zhiyin_main{height:450px;background: #fff;width: 1098px;}
.zhiyin_main .zhiyin_setab span{display: inline-block;margin: 20px 20px 20px 25px;color:#999;font-size: 16px;}
.zhiyin_main .zhiyin_setab img{display: table;margin: 0 auto}