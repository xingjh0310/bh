<% include ../main/top.ejs %>
<body>
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 财务管理 <span class="c-gray en">&gt;</span> 投资记录 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="pd-20">
    <div class="">
        日期范围：
        <input type="text" onfocus="WdatePicker({maxDate:'#F{$dp.$D(\'eTime\')||\'%y-%M-%d\'}'})" id="bTime" class="input-text Wdate" value="" style="width:120px;" name="bTime" readonly="true">
        -
        <input type="text" onfocus="WdatePicker({minDate:'#F{$dp.$D(\'bTime\')}',maxDate:'%y-%M-%d'})" id="eTime" class="input-text Wdate" style="width:120px;" value="" name="eTime" readonly="true">
        <div style="width:260px;float: left;">&nbsp;&nbsp;渠道&nbsp;:&nbsp;
            <span class="select-box" style="width:160px;">
				<select class="select" id="route">
                    <option value="">全部</option>
                    <% for(var key in _global.route){ %>
                    <option value="<%= _global.route[key].v %>"><%= _global.route[key].desc %></option>
                    <% } %>
                </select>
			</span>
        </div>
        <input type="text" id="param" placeholder="投资人手机号码、投资人姓名、标的名称" style="width:350px" class="input-text">
        <input type="text" id="invite" placeholder="邀请人姓名、邀请人手机号" style="width:350px" class="input-text">
        <button name="" id="" class="btn btn-success" type="button" onclick="ZC_api.loadInvestList(1,20,false)"><i class="Hui-iconfont">&#xe665;</i> 搜索</button>
        <button name="" id="" class="btn btn-success" type="button" onclick="ZC_api.loadInvestList(1, $('#pageTotal').val(),true);"><i class="Hui-iconfont">&#xe644;</i> 导出</button>
    </div>
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort">
            <thead>
            <tr class="text-c">
                <th width="25"><input type="checkbox" name="" value=""></th>
                <th width="120">投资时间</th>
                <th width="120">预期还款时间</th>
                <th width="100">手机号</th>
                <th width="60">姓名</th>
                <th width="30">推广类型</th>
                <th width="60">邀请人</th>
                <th width="60">邀请人手机号</th>
                <th width="160">项目名称</th>
                <th width="80">项目类型</th>
                <th width="80">项目期限</th>
                <th width="80">项目年化</th>
                <th width="80">投资渠道</th>
                <th width="60">投资金额</th>
                <th width="60">收益</th>
                <th width="60">续投金额</th>
                <th width="60">使用红包</th>
                <th width="40">状态</th>
                <th width="40">协议下载</th>
            </tr>
            </thead>
            <script type="text/template" id="invest_tmpl">
                <tr class="text-c">
                    <td><input type="checkbox" value="" name=""></td>
                    <td>{time}</td>
                    <td>{lastpayment}</td>
                    <td>{mobile}</td>
                    <td>{realName}</td>
                    <td>{online}</td>
                    <td>{inviteName}</td>
                    <td>{inviteMobile}</td>
                    <td>{title}</td>
                    <td>{productType}</td>
                    <td>{period}</td>
                    <td>{debtRate}</td>
                    <td>{route}</td>
                    <td>{amount}</td>
                    <td>{interest}</td>
                    <td>{pieceAmount}</td>
                    <td>{bonusAmount}</td>
                    <td>{state}</td>
                    <td>{download}</td>
                </tr>
            </script>
            <tbody id="invest_list">
            </tbody>
        </table>
        <div id="page"></div>
        <input type="hidden" id="pageTotal"/>
    </div>
</div>

</body>
<% include ../main/bottom.ejs %>

<script type="text/javascript">

    function load() {
        ZC_api.loadInvestList(1, 20, false);
    }
    load();

</script>

</html>