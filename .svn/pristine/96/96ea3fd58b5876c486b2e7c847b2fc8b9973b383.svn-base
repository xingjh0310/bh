/*平台数据*/

.recordBan{
    display: block;
    width:100%;
    height: 360px;
    background: url("/img/recordBan.jpg") no-repeat center center;
}
.record .recordDiv{
    width: 1120px;
    margin: 0 auto;
    padding: 50px 30px 30px 30px;
}
.record .recordDiv em{
    display: block;
    width: 100%;
    padding-top: 40px;
    padding-bottom: 30px;
}
.record .recordDiv em img{
    display: block;
    margin: 0 auto;
}
.record .recordDiv ul li{
    float: left;
    width: 268px;
    height: 300px;
    font-size: 18px;
    margin: 10px 6px;
    cursor: pointer;
    background: #fafafa;
}
.record .recordDiv ul li i{
    display: block;
    width: 92px;
    height: 92px;
    margin: 64px auto;
    margin-bottom: 15px;
}
.record .recordDiv ul li i.i1{
    background: url("/img/record_1.png") no-repeat center center;
    background-size: 100% 100%;
}
.record .recordDiv ul li i.i2{
    background: url("/img/record_2.png") no-repeat center center;
    background-size: 100% 100%;
}
