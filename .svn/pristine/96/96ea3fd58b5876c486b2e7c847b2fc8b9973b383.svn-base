    background-size: 100% 100%;
}
.record .recordDiv ul li i.i8{
    background: url("/img/record_8.png") no-repeat center center;
    background-size: 100% 100%;
}

.record .recordDiv ul li:hover{
    -webkit-box-shadow: 0 0 10px rgba(255, 138, 16, .4);
    -moz-box-shadow: 0 0 10px rgba(255, 138, 16, .4);
    box-shadow: 0 0 10px rgba(255, 138, 16, .4);
}
.record .recordDiv ul li:hover i.i1{
    background: url("/img/record_9.png") no-repeat center center;
    background-size: 100% 100%;
}
